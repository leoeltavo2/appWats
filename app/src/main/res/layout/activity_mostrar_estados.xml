<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".estados.MostrarEstadosActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarUsuarioEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarEstados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/atrasEstados"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/atras"
                    android:layout_gravity="center_vertical"/>

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imagenUsuarioEstados"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="10dp"
                    app:civ_border_width="0dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/nombreUsuarioEstados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Usuario"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                    <TextView
                    android:id="@+id/fechaUserEstados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Ayer 1:13 p.m."
                    android:textColor="@color/white"
                    android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgEstados"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/p1"/>
        <TextView
            android:id="@+id/textViewEstados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demonios gump!!"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/arriba"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESPONDER"
            android:textSize="15dp"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>